{
  "name": "dailyinventory-desktop",
  "version": "1.0.0",
  "description": "Daily Inventory Desktop App",
  "main": "dist/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "vite",
    "build": "vite build && cp public/electron.js dist/ && cp public/preload.js dist/",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "@babel/runtime-corejs3": "^7.27.6",
    "dailyinventory-shared": "file:../shared",
    "dayjs": "^1.11.10",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "recharts": "^2.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^7.6.0",
    "electron": "25.9.8",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "vite": "^4.3.9",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.dailyinventory.desktop",
    "productName": "Daily Inventory",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": "AppImage"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
