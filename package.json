{
  "name": "dailyinventory-monorepo",
  "version": "1.0.0",
  "description": "Daily Inventory - Cross-platform spiritual inventory tracking app",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "web:start": "npm run start --workspace=dailyinventory-web",
    "web:build": "npm run build --workspace=dailyinventory-web",
    "mobile:start": "npm run start --workspace=dailyinventory-mobile",
    "mobile:ios": "npm run ios --workspace=dailyinventory-mobile",
    "mobile:android": "npm run android --workspace=dailyinventory-mobile",
    "desktop:start": "npm run start --workspace=dailyinventory-desktop",
    "desktop:dev": "npm run electron-dev --workspace=dailyinventory-desktop",
    "desktop:build": "npm run build --workspace=dailyinventory-desktop",
    "desktop:dist": "npm run dist --workspace=dailyinventory-desktop",
    "desktop:dist:win": "npm run dist:win --workspace=dailyinventory-desktop",
    "desktop:dist:mac": "npm run dist:mac --workspace=dailyinventory-desktop",
    "desktop:dist:linux": "npm run dist:linux --workspace=dailyinventory-desktop",
    "shared:build": "npm run build --workspace=dailyinventory-shared",
    "dev": "concurrently \"npm run web:start\" \"npm run mobile:start\" \"npm run desktop:start\"",
    "build:all": "npm run shared:build && npm run web:build && npm run desktop:build",
    "install:all": "npm install && npm run shared:build",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "@react-native-community/cli": "^18.0.0",
    "concurrently": "^8.2.2",
    "react-native-gradle-plugin": "^0.71.0"
  },
  "keywords": [
    "pwa",
    "react-native",
    "electron",
    "inventory",
    "spiritual",
    "tracking",
    "cross-platform",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "@babel/runtime-corejs3": "^7.27.6"
  }
}
